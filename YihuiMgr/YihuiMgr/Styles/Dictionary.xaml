<ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YihuiMgr.Styles">
    <Color x:Key="ThemeColor">LightBlue</Color>
    <Color x:Key="MenuColor">LightSlateGray</Color>
    <Color x:Key="MenuFrontColor">White</Color>
    <Color x:Key="MenuBackColor">Black</Color>

    <SolidColorBrush x:Key="ThemeColorBrush" Color="{ StaticResource ThemeColor}" />
    <SolidColorBrush x:Key="MenuColorBrush" Color="{ StaticResource MenuColor }"/>
    <SolidColorBrush x:Key="MenuFrontBrush" Color="{ StaticResource MenuFrontColor}"/>
    <SolidColorBrush x:Key="MenuBackColorBrush" Color="{ StaticResource MenuBackColor}"/>

    <Style x:Key="InputLabel"  TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

    <Style x:Key="InputBox" TargetType="FrameworkElement">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="4"/>
    </Style>

</ResourceDictionary>

